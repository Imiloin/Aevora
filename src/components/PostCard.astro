---
import FormattedDate from "@components/FormattedDate.astro";

const { post, isFirstChild } = Astro.props;
---

<li class={isFirstChild ? "first-child" : ""}>
    <a href={`/blog/${post.slug}/`}>
        <img
            width={720}
            height={360}
            src={post.data.heroImage}
            alt=""
            class="card shadow"
        />
        <img
            width={720}
            height={360}
            src={post.data.heroImage}
            alt=""
            class="card"
        />
        <h4 class="title">{post.data.title}</h4>
        <p class="date">
            <FormattedDate date={post.data.pubDate} />
        </p>
    </a>
</li>

<style>
    li {
        width: calc(50% - 1rem);
        position: relative;
    }
    li * {
        text-decoration: none;
        transition: 0.2s ease;
    }
    li.first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
    }
    li.first-child img {
        width: 75%;
    }
    li.first-child .title {
        font-size: 2.074rem;
    }
    li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
        &:hover {
            transform: scale(1.02);
        }
    }
    li a {
        display: block;
    }
    .title {
        margin: 0;
        color: var(--black);
        line-height: 1;
    }
    .date {
        margin: 0;
        color: var(--gray);
    }
    li a:hover h4,
    li a:hover .date {
        color: var(--accent);
    }
    li.first-child img.shadow {
        position: absolute;
        top: 0;
        left: calc((100% - 75%) / 2);
        bottom: 0;
    }
    li img.shadow {
        position: absolute;
        overflow: hidden;
        display: flex;
        z-index: -2;
    }
    li a:hover img.shadow {
        content: "";
        background: inherit;
        filter: blur(20px) brightness(80%) opacity(0.8);
    }
    @media (max-width: 720px) {
        li {
            width: 75%;
            text-align: center;
            left: calc((100% - 75%) / 2);
        }
        li .title {
            font-size: 1.2em;
        }
        li.first-child {
            margin-bottom: 0;
            left: 0;
        }
        li.first-child .title {
            font-size: 1.4em;
        }
        li.first-child img {
            width: 100%;
        }
        li.first-child img.shadow {
            left: 0;
        }
    }
</style>
