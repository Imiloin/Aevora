                                    fill="#EDEDED"></path>
                            </svg>
                            <!-- mainClock funtialities_ -->
                            <div class="centerPoint">
                                <div class="sui" id="hour"></div>
                                <div class="sui" id="second"></div>
                                <div class="sui" id="minute"></div>
                            </div>
                            <!-- end of mainClock funtialities_ -->
                        </div>
                    </div>
                    <div data-expand class="button-container">
                        <a href="/blog/">
                            <button class="link-button">
                                <span class="circle" aria-hidden="true">
                                    <span class="icon arrow"></span>
                                </span>
                                <span class="button-text">View Posts</span>
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="content column">
                <div class="quote-container">
                    <div class="text-section left">
                        <div class="small-text">BUILD YOUR WEB:</div>
                        <div class="line"></div>
                    </div>
                    <div class="mid-text-container">
                        <span class="main-text">"KEEP IT</span>
                    </div>
                    <div class="text-section right">
                        <div class="small-text unselectable-spaces">#01</div>
                        <div class="line"></div>
                    </div>
                </div>
                <div class="right-align">
                    <span class="main-text">SIMPLE AND</span>
                </div>
                <div>
                    <span class="main-text">STUPID"</span>
                </div>
            </div>
        </section>
        <Footer width="80%" />
    </body>
</html>
