---
import BaseHead from "@components/BaseHead.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

import "@styles/chat-container.css";
import "@styles/clock.css";
import "@styles/cursor.css";
import "@styles/link-button.css";
import "@styles/quotation.css";
import "@styles/typing-effect.css";
---

<!doctype html>
<html lang="en">
    <style>
        /* 隐藏滚动条 */
        html::-webkit-scrollbar {
            display: none;
        }
        html {
            scrollbar-width: none; /* Firefox */
        }
        html {
            -ms-overflow-style: none; /* IE and Edge */
        }

        html,
        body,
        div,
        * {
            cursor: none !important;
        }

        section {
            display: flex;
            align-items: center; /* 垂直方向居中 */
            height: 100vh;
            justify-content: space-between;
            gap: 1em;
        }
        canvas {
            display: block;
            width: 100%;
            height: 100%;
        }

        .content {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 10%;
            margin-right: 10%;
            width: 80%;
        }
        .content.column {
            flex-direction: column;
        }
        .left-content,
        .right-content {
            width: 600px;
            max-width: calc(40% - 1em);
            min-width: 500px;
        }
        .left-content {
            text-align: left;
            justify-content: flex-start; /* 水平方向靠左 */
            margin-left: 10%;
        }
        .right-content {
            text-align: right;
            justify-content: flex-end; /* 水平方向靠右 */
            margin-right: 10%;
        }

        .centerDiv {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .partDiv {
            position: relative;
            width: 600px;
            max-width: calc(40% - 1em);
        }

        .clock-container {
            transform: translateX(-100px) translateY(-50px);
        }
        .button-container {
            transform: translateX(-55px) translateY(50px);
        }

        .left-align {
            align-self: flex-start;
            text-align: left;
            width: 100%; /* 确保元素占满父容器的宽度 */
            margin-left: 10%;
        }
        .right-align {
            align-self: flex-end;
            text-align: right;
            width: 100%; /* 确保元素占满父容器的宽度 */
            margin-right: 10%;
        }

        @media (max-width: 1200px) {
            .content {
                margin: auto 1em;
                width: calc(100% - 2em);
            }
            .left-content,
            .right-content {
                margin: auto;
                align-items: center;
                min-width: 600px;
            }
            section {
                height: fit-content;
                font-size: 0.8rem;
                display: block;
                align-items: column;
            }
            .centerDiv {
                justify-content: center;
                align-items: center;
                width: 100%;
                margin: 2em 0;
            }
            .partDiv {
                width: 100%;
                max-width: none;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            .clock-container {
                transform: translateX(0) translateY(0);
                margin: 2em;
            }
            .button-container {
                transform: translateX(0) translateY(0);
                margin: 2em;
            }
            .left-align {
                margin-left: 20%;
            }
            .right-align {
                margin-right: 20%;
            }
        }
        @media (max-width: 720px) {
            .left-content,
            .right-content {
                min-width: 90%;
            }
            .clock-container {
                margin: 0;
                scale: 0.6;
            }
            .button-container {
                margin: 0;
                scale: 0.8;
            }
        }
        @media (max-width: 636px) {
            .clock-container {
                display: none;
            }
        }
    </style>

    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

    <div class="cursor">
        <div class="cursor-outer"></div>
        <div class="cursor-inner"></div>
    </div>
    <script>
        import "@scripts/clock.js";
        import "@scripts/cuboidal-quantum.js";
        import "@scripts/cursor.js";
        import "@scripts/typing-effect.js";
    </script>

    <body>
        <Header />
        <section>
            <canvas id="cuboidal-quantum-canvas"></canvas>
        </section>
        <section>
            <div class="left-content">
                <div class="chat-container">
                    <div class="type-container">
                        <h2>
                            <span
                                class="txt-type"
                                data-wait="4000"
                                data-words='["Pleasure to meet you", "Check my blogs"]'
                            ></span>
                        </h2>
                    </div>
                    <div class="chatbubble-left">Hi there!</div>
                    <div class="chatbubble-row">
                        <div class="chatbubble-left">?</div>
                        <div class="chatbubble-right">Ready</div>
                    </div>
                    <div class="chatbubble-right">Let's GO~</div>
                    <p>
                        Use the <a data-expand href="/search">search page</a> to
                        find the blog you are looking for.
                        <br />
                        Check out <a data-expand href="/blog">all blogs</a> here.
                    </p>
                </div>
            </div>
            <div class="centerDiv">
                <div class="partDiv">
                    <div class="clock-container">
                        <div class="clock" id="clock">
